def merge_sort_recursive(arr):
    # Якщо довжина масиву 1 — він уже відсортований
    if len(arr) <= 1:
        return arr

    mid = len(arr) // 2
    left_half = merge_sort_recursive(arr[:mid])
    right_half = merge_sort_recursive(arr[mid:])

    return merge(left_half, right_half)

def merge(left, right):
    # Допоміжна функція для злиття двох відсортованих частин
    result = []
    i = j = 0

    while i < len(left) and j < len(right):
        if left[i] <= right[j]:
            result.append(left[i])
            i += 1
        else:
            result.append(right[j])
            j += 1

    result.extend(left[i:])
    result.extend(right[j:])
    return result

# Приклад
data = [86, 36, 14, 50, 64, 21, 2, 83, 82]
sorted_data = merge_sort_recursive(data)
print("Після рекурсивного сортування:", sorted_data)
