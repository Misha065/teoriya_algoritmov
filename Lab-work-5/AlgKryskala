#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

#define edge pair<int,int>

class Graph {
private:
    vector<pair<int, edge>> G; // список ребер
    vector<pair<int, edge>> T; // MST
    int parent[9]; // DSU, індекси 1..8

public:
    Graph() {
        for (int i = 1; i <= 8; i++)
            parent[i] = i;
    }

    int find_set(int i) {
        if (i == parent[i]) return i;
        return parent[i] = find_set(parent[i]);
    }

    void union_set(int u, int v) {
        parent[u] = parent[v];
    }

    void AddWeightedEdge(int u, int v, int w) {
        G.push_back(make_pair(w, edge(u, v)));
    }

    void kruskal() {
        sort(G.begin(), G.end());
        for (auto &i : G) {
            int uRep = find_set(i.second.first);
            int vRep = find_set(i.second.second);
            if (uRep != vRep) {
                T.push_back(i);
                union_set(uRep, vRep);
            }
        }
    }

    void print() {
        cout << "Edge : Weight\n";
        for (auto &i : T)
            cout << i.second.first << " - "
                 << i.second.second << " : "
                 << i.first << endl;
    }
};

int main() {

    Graph g;

    g.AddWeightedEdge(1,4,3);
    g.AddWeightedEdge(1,2,6);
    g.AddWeightedEdge(1,3,7);

    g.AddWeightedEdge(2,3,2);
    g.AddWeightedEdge(2,4,9);
    g.AddWeightedEdge(2,6,9);

    g.AddWeightedEdge(3,6,7);
    g.AddWeightedEdge(3,8,4);

    g.AddWeightedEdge(4,5,5);

    g.AddWeightedEdge(5,6,4);
    g.AddWeightedEdge(5,7,1);

    g.AddWeightedEdge(6,7,8);
    g.AddWeightedEdge(6,8,7);

    g.AddWeightedEdge(7,8,5);

    g.kruskal();
    g.print();
    return 0;
}
