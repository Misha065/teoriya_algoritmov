#include <iostream>
using namespace std;

#define V 8
#define INF 999999

int main() {

    int G[V][V] = {
        //1  2  3  4  5  6  7  8
        { 0, 6, 7, 3, 0, 0, 0, 0 }, //1
        { 6, 0, 2, 9, 0, 9, 0, 0 }, //2
        { 7, 2, 0, 0, 0, 7, 0, 4 }, //3
        { 3, 9, 0, 0, 5, 0, 0, 0 }, //4
        { 0, 0, 0, 5, 0, 4, 1, 0 }, //5
        { 0, 0, 7, 0, 4, 0, 8, 7 }, //6
        { 0, 0, 0, 0, 1, 8, 0, 5 }, //7
        { 0, 0, 4, 0, 0, 7, 5, 0 }  //8
    };

    bool selected[V] = { false };
    selected[0] = true; // старт з вершини 1

    int no_edge = 0;

    cout << "Edge : Weight\n";

    while (no_edge < V - 1) {
        int min = INF;
        int x = 0, y = 0;

        for (int i = 0; i < V; i++) {
            if (selected[i]) {
                for (int j = 0; j < V; j++) {
                    if (!selected[j] && G[i][j] != 0) {
                        if (G[i][j] < min) {
                            min = G[i][j];
                            x = i;
                            y = j;
                        }
                    }
                }
            }
        }

        cout << x + 1 << " - " << y + 1 << " : " << G[x][y] << endl;
        selected[y] = true;
        no_edge++;
    }

    return 0;
}
